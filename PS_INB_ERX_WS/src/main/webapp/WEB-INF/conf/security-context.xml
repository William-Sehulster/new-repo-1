	<!-- HTTP basic authentication in Spring Security with http intercept url pattern -->
	<http  auto-config="true" entry-point-ref="basicAuthEntryPoint" create-session="stateless">
	    <headers>
            <content-security-policy policy-directives="any" />          
        </headers>
		<intercept-url pattern="/services/rest/patientSearch/**" access="hasRole('ROLE_WSUSER')" />		
		<intercept-url pattern="/services/rest/eandeVerify/**" access="hasRole('ROLE_WSUSER')" />
		<intercept-url pattern="/services/rest/provider/**" access="hasRole('ROLE_WSUSER')" />
		<intercept-url pattern="/services/rest/drug/**" access="hasRole('ROLE_WSUSER')" />
		<intercept-url pattern="/services/rest/sendInboundMessage/**" access="hasRole('ROLE_WSUSER')" />		
		<intercept-url pattern="/services/rest/vistaoutboundMsg/**" access="hasRole('ROLE_WSUSER')" />
		<intercept-url pattern="/services/rest/outbound/**" access="hasRole('ROLE_WSUSER')" />
		<intercept-url pattern="/services/rest/appInfo/**" access="hasRole('ROLE_WSUSER')" />
		
		 
		 <!--  left out inBoundNCPDPMessage as it will be with CH and cert exchange -->
		 
		<custom-filter after="BASIC_AUTH_FILTER" ref="basicAuthenticationFilter"/>
		
		<http-basic />
		
		<csrf disabled ="true"/>
	</http>
	
	
	
	<beans:bean id="basicAuthEntryPoint" class="org.springframework.security.web.authentication.www.BasicAuthenticationEntryPoint">	
	 <beans:property name="realmName" value="Inbound eRx WS Realm"  />	
	</beans:bean>
	
	
	<beans:bean id="basicAuthenticationFilter"  class="org.springframework.security.web.authentication.www.BasicAuthenticationFilter">
        <beans:constructor-arg ref="authenticationManager"/>
        <beans:constructor-arg ref="basicAuthEntryPoint"/>
    </beans:bean>
	
	<beans:bean	class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<beans:property name="location" value="classpath:gov.va.med.pharmacy.inboundeRx.properties" />
		 <!--  This is need to have multiple property placeholder -->
		 <beans:property name="ignoreUnresolvablePlaceholders" value="true"/>
	</beans:bean>
	
	
    <!-- Authentication manager configuration -->	
	
	<authentication-manager alias="authenticationManager">    
    <authentication-provider user-service-ref ="userDetailsService"/>       
    </authentication-manager>
     
     <user-service id = "userDetailsService">
            <user name="${ws.user}" password="${ws.user.password}" authorities="ROLE_WSUSER" />
          <!--   <user name="${ws.cn_cert_user}" password="" authorities="ROLE_WSUSER" />	-->
     </user-service>
   
   	
</beans:beans>